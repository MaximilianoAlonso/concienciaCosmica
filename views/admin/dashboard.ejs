    <script>
        document.getElementById('downloadList').addEventListener('click', function() {
            var emails = [];
            var table = document.getElementById('subscribers').getElementsByTagName('table')[0];
            var rows = table.getElementsByTagName('tr');
            for (var i = 1; i < rows.length; i++) { // Start from 1 to skip the header row
                var cells = rows[i].getElementsByTagName('td');
                var email = cells[2].innerText.trim();
                emails.push(email + ',');
            }
    
            var data = emails.join('\n');
    
            var blob = new Blob([data], { type: 'text/plain' });
            var link = document.createElement('a');
            link.download = 'emails_suscriptores.txt';
            link.href = window.URL.createObjectURL(blob);
            link.click();
        });
    </script>
   
    
    
    
    
    
    
    
